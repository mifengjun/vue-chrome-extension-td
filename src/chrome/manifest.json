{
	"manifest_version": 2,
	"name": "小小工作台",
	"description": "让他帮你完成一些分神的简单小事情",
	"author": "米",
	"version": "1.0.0",
	"browser_action": {
		"default_title": "小小工作台",
		"default_icon": "assets/logo.png",
		"default_popup": "popup.html"
	},
	"chrome_url_overrides": {
		"newtab": "newtab.html"
	},
	"permissions": [
		"bookmarks",
		"history",
		"contextMenus",
		"webRequestBlocking",
		"notifications",
		"tabs",
		"webRequest",
		"http://*/",
		"https://*/",
		"<all_urls>",
		"storage",
		"activeTab"
	],
	"background": {
		"scripts": ["js/background.js"]
	},
	"icons": {
		"16": "assets/logo.png",
		"48": "assets/logo.png",
		"128": "assets/logo.png"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"css": [
				"css/content.css"
			],
			"js": [
				"js/content.js"
			],
			// 代码注入的时间，可选值： "document_start", "document_end", or "document_idle"，最后一个表示页面空闲时，默认document_idle
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": ["fonts/*", "inject.js"]
}